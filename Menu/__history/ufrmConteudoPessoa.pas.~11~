begin
  //
end;

procedure TfrmConteudoPessoa.rctBtnConPessoaClick(Sender: TObject);
begin
  //
end;

{$Region 'Início enventos Move e Leave dos botões'}
//****************************************************************************\\
//                     Inicio Eventos Move e Leave do Botões                  \\
//****************************************************************************\\
procedure TfrmConteudoPessoa.ChangeMouseLeave(Sender: TObject);
var nome : string;
  layout, layoutPai: TLayout;
begin
  componente := TRectangle(Sender);
  corForm.RetanguloMouseLeave(componente);
end;

procedure TfrmConteudoPessoa.ChangeMouseMove(Sender: TObject;
  Shift: TShiftState; X, Y: Single);
begin
  componente := TRectangle(Sender);
  corForm.RetanguloMouseMove(componente, frmMenuPrincipal);
end;

