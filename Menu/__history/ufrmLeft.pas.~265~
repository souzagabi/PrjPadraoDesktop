end;

procedure TfrmLeft.rctConMovimentosClick(Sender: TObject);
begin
  corForm.ShowHiddenForm(lyt06ConteudoMovimentos);
end;

//****************************************************************************\\
//                       Início Eventos Financeiro                            \\

